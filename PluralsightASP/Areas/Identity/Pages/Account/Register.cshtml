@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";

    var culture = CultureInfo.CurrentCulture.Name;
}
<section class="clean-block clean-form dark">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="block-heading">
                <h2 class="text-info" localize-content>@ViewData["Title"]</h2>
            </div>
            <form class="clean-form" asp-route-returnUrl="@Model.ReturnUrl" method="post" localize-content>
                <h4 localize-content>Create a new account.</h4>
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control item" type="text" id="firstname">
                    <span asp-validation-for="Input.FirstName" class="text-danger" localize-content></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control item" type="text" id="lastname">
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" localize-content>Register</button>
            </form>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <localization-validation-scripts></localization-validation-scripts>
}