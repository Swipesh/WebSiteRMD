@page
@model UsersList

@{
    ViewData["Title"] = "Users management";
    ViewData["ActivePage"] = ManageNavPages.UsersManagement;
}

<partial name="_StatusMessage" model="Model.StatusMessage"/>

<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header py-3">
            <p class="text-primary m-0 font-weight-bold" localize-content>@ViewData["Title"]</p>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 text-nowrap">
                    <div id="dataTable_length" class="dataTables_length" aria-controls="dataTable">
                        <label>
                            Show&nbsp;
                            <select class="form-control form-control-sm custom-select custom-select-sm">
                                <option value="10" selected="">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option>
                            </select>&nbsp;
                        </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-md-right dataTables_filter" id="dataTable_filter">
                        <label>
                            <input type="search" class="form-control form-control-sm" aria-controls="dataTable" placeholder="Search">
                        </label>
                    </div>
                </div>
            </div>
            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                <table class="table dataTable my-0" id="dataTable">
                    <thead>
                    <tr>
                        <th localize-content>
                            First Name
                        </th>
                        <th localize-content>
                            Last Name
                        </th>
                        <th localize-content>
                            Username
                        </th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.Users)
                    {
                        <tr>
                            <td>
                                @item.FirstName
                            </td>
                            <td>
                                @item.LastName
                            </td>
                            <td>
                                @item.UserName
                            </td>
                            <td>
                                <div>
                                    <a asp-page="Edit" asp-route-id="@item.Id">Edit</a>
                                </div>
                                <div>
                                    <a asp-page="Details" asp-route-id="@item.Id">Details</a>
                                </div>
                                <div>
                                    <a asp-page="Delete" asp-route-id="@item.Id">Delete</a>
                                </div>
                                <div>
                                    <a asp-page="EditUserRoles" asp-route-id="@item.Id">Edit roles</a>
                                </div>
                                <div>
                                    <a asp-page="Files" asp-route-id="@item.Id">Files</a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-md-6 align-self-center">
                    <p id="dataTable_info" class="dataTables_info" role="status" aria-live="polite">Showing 1 to 10 of 27</p>
                </div>
                <div class="col-md-6">
                    <nav class="d-lg-flex justify-content-lg-end dataTables_paginate paging_simple_numbers">
                        <ul class="pagination">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">«</span>
                                </a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">»</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-page="Create">Add new</a>
            </div>
        </div>
    </div>