@page
@model DetailsModel

@{
    ViewData["Title"] = "Role details";
    ViewData["ActivePage"] = ManageNavPages.RolesManagement;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<hr/>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Role.Name
        </dd>
    </dl>
</div>
<div>
    <a asp-page="Edit" asp-route-id="@Model.Role.Id">Edit</a> |
    <a asp-page="RolesList">Back to List</a>
</div>
