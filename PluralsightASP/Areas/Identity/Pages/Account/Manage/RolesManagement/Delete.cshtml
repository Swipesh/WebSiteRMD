@page
@model DeleteModel

@{
    ViewData["Title"] = "Delete role";
    ViewData["ActivePage"] = ManageNavPages.RolesManagement;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage"/>
<hr/>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Role</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Role.Name
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Role.Id"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-page="RolesList">Back to List</a>
    </form>
</div>