    var culture = CultureInfo.CurrentCulture.Name;
}
<ul class="nav nav-pills flex-column">
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-area="Identity" asp-page="/Account/Manage/Index" asp-route-culture="@culture" localize-content>Profile</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-area="Identity" asp-page="/Account/Manage/Email" asp-route-culture="@culture" localize-content>Email</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-area="Identity" asp-page="/Account/Manage/ChangePassword" asp-route-culture="@culture" localize-content>Password</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.FilesNavClass(ViewContext)" id="files" asp-area="Identity" asp-page="/Account/Manage/Files" asp-route-culture="@culture" localize-content>Files</a>
